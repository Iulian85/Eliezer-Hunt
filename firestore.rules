
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reguli restrictive pentru securitate
    match /users/{userId} {
      allow read: if true;
      // Actualizarea este permisă doar pentru anumite câmpuri și cu limite
      allow update: if request.resource.data.keys().hasAll(['balance', 'tonBalance', 'gameplayBalance', 'rareBalance', 'eventBalance', 'dailySupplyBalance', 'merchantBalance', 'referralBalance', 'collectedIds', 'lastActive', 'deviceFingerprint', 'photoUrl', 'walletAddress', 'adsgramBlockId'])
        && (!request.resource.data.balance.isIncrement() || (request.resource.data.balance.amount() >= 0 && request.resource.data.balance.amount() <= 10000))
        && (!request.resource.data.tonBalance.isIncrement() || (request.resource.data.tonBalance.amount() >= 0 && request.resource.data.tonBalance.amount() <= 100))
        && (!request.resource.data.gameplayBalance.isIncrement() || (request.resource.data.gameplayBalance.amount() >= 0 && request.resource.data.gameplayBalance.amount() <= 10000))
        && (!request.resource.data.rareBalance.isIncrement() || (request.resource.data.rareBalance.amount() >= 0 && request.resource.data.rareBalance.amount() <= 10000))
        && (!request.resource.data.eventBalance.isIncrement() || (request.resource.data.eventBalance.amount() >= 0 && request.resource.data.eventBalance.amount() <= 10000))
        && (!request.resource.data.dailySupplyBalance.isIncrement() || (request.resource.data.dailySupplyBalance.amount() >= 0 && request.resource.data.dailySupplyBalance.amount() <= 10000))
        && (!request.resource.data.merchantBalance.isIncrement() || (request.resource.data.merchantBalance.amount() >= 0 && request.resource.data.merchantBalance.amount() <= 10000))
        && (!request.resource.data.referralBalance.isIncrement() || (request.resource.data.referralBalance.amount() >= 0 && request.resource.data.referralBalance.amount() <= 10000));
    }

    // Permite citirea tuturor utilizatorilor pentru operațiuni administrative
    match /users {
      allow list: if true;
    }

    match /claims/{claimId} {
      allow read: if true;
      allow create: if request.resource.data.claimedValue <= 10000 && request.resource.data.tonReward <= 100;
    }

    match /withdrawal_requests/{reqId} {
      allow read: if true;
      allow create: if request.resource.data.amount <= 100;
      // Permite actualizarea statusului cererilor de retragere
      allow update: if request.resource.data.keys().hasAll(['status']) && request.resource.data.status in ['approved', 'rejected', 'pending'];
    }

    match /campaigns/{campId} {
      allow read: if true;
      // Scrierea este permisă doar pentru creare (nu actualizare)
      allow create: if true;
      allow update: if false;
      allow delete: if false;
    }

    match /hotspots/{hId} {
      allow read: if true;
      // Scrierea este permisă doar pentru creare (nu actualizare)
      allow create: if true;
      allow update: if false;
      allow delete: if false;
    }

    match /admins/{adminId} {
      allow read: if true;
      // Doar adminii pot modifica lista de admini
      allow write: if false; // Blochează toate operațiile de scriere pentru securitate
    }
  }
}

