
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reguli restrictive pentru securitate
    match /users/{userId} {
      allow read: if true;
      // Actualizarea este permisă doar pentru anumite câmpuri și cu limite
      allow update: if request.resource.data.keys() hasOnly ['balance', 'tonBalance', 'gameplayBalance', 'rareBalance', 'eventBalance', 'dailySupplyBalance', 'merchantBalance', 'referralBalance', 'collectedIds', 'lastActive', 'deviceFingerprint', 'photoUrl', 'walletAddress', 'adsgramBlockId']
        && request.resource.data.balance >= resource.data.balance
        && request.resource.data.balance <= resource.data.balance + 10000
        && request.resource.data.tonBalance >= resource.data.tonBalance
        && request.resource.data.tonBalance <= resource.data.tonBalance + 100;
    }

    match /claims/{claimId} {
      allow read: if true;
      allow create: if request.resource.data.claimedValue <= 10000 && request.resource.data.tonReward <= 100;
    }

    match /withdrawal_requests/{reqId} {
      allow read: if true;
      allow create: if request.resource.data.amount <= 100;
    }

    match /campaigns/{campId} {
      allow read: if true;
      // Scrierea este permisă doar pentru creare (nu actualizare)
      allow create: if true;
      allow update: if false;
      allow delete: if false;
    }

    match /hotspots/{hId} {
      allow read: if true;
      // Scrierea este permisă doar pentru creare (nu actualizare)
      allow create: if true;
      allow update: if false;
      allow delete: if false;
    }
  }
}