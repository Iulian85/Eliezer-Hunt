rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reguli restrictive pentru securitate
    match /users/{userId} {
      allow read: if true;
      // Actualizarea este permisă doar pentru anumite câmpuri și cu limite
      allow update: if request.auth != null 
        && request.resource.data.keys().hasAll(['balance', 'tonBalance', 'gameplayBalance', 'rareBalance', 'eventBalance', 'dailySupplyBalance', 'merchantBalance', 'referralBalance', 'collectedIds', 'lastActive', 'deviceFingerprint', 'photoUrl', 'walletAddress', 'adsgramBlockId'])
        && (request.resource.data.balance == resource.data.balance || request.resource.data.balance >= resource.data.balance)
        && (request.resource.data.tonBalance == resource.data.tonBalance || request.resource.data.tonBalance >= resource.data.tonBalance);
    }

    match /claims/{claimId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.claimedValue <= 10000 && request.resource.data.tonReward <= 100;
    }

    match /withdrawal_requests/{reqId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.amount <= 100;
    }

    match /campaigns/{campId} {
      allow read: if true;
      // Scrierea este permisă doar pentru creare (nu actualizare)
      allow create: if request.auth != null;
      allow update: if false;
      allow delete: if false;
    }

    match /hotspots/{hId} {
      allow read: if true;
      // Scrierea este permisă doar pentru creare (nu actualizare)
      allow create: if request.auth != null;
      allow update: if false;
      allow delete: if false;
    }

    match /admins/{adminId} {
      allow read: if true;
      // Doar adminii pot modifica lista de admini
      allow write: if false; // Blochează toate operațiile de scriere pentru securitate
    }
    
    // Permite listarea tuturor utilizatorilor pentru funcții administrative
    match /users {
      allow list: if true;
    }
  }
}