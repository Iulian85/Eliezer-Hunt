{
  "build": {
    "skip": true
  },
  "deploy": {
    "startCommand": "npm start"
  },
  "env": {
    "NODE_ENV": {
      "description": "Node environment",
      "value": "production",
      "required": true
    },
    "TELEGRAM_BOT_TOKEN": {
      "description": "Your Telegram bot token",
      "required": true
    },
    "HMAC_SECRET": {
      "description": "Secret key for HMAC verification",
      "required": true
    }
  }
}